pipeline{
  agent any
  stages{
      stage("git checkout"){
	    steps{
		  git credentialsId: 'Javahome', url: 'https://github.com/anilkumardevoops/DevOps_Class.git'
		}
	  }
	  stage("Maven Installing"){
	    steps{
		  ansiblePlaybook become: true, credentialsId: 'private-key', disableHostKeyChecking: true, installation: 'ansible', inventory: 'inventory', playbook: 'maven.yml'
		}
	  }
	  stage("Tomcat Install"){
	    steps{
		  ansiblePlaybook become: true, credentialsId: 'private-key', disableHostKeyChecking: true, installation: 'ansible', inventory: 'myinventory', playbook: 'tomcat.yml'
		}
	  }
	}
}
